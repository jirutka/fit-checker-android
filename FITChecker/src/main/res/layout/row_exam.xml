<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:id="@+id/list_item"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="8dp"
                  android:layout_toLeftOf="@+id/imgAttending"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtDate"
            android:text="2. 6. 2014 08:00"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"
            android:textColor="@color/apptheme_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtRoom"
            android:text="MÃ­stnost: T9155"
            android:textColor="#727272"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imgAttending"
        android:layout_width="wrap_content"
        android:src="@drawable/ic_icon_attending"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:layout_toLeftOf="@+id/txtState"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/txtState"
        android:text="25/50"
        android:textSize="16sp"

        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_height="wrap_content"/>
</RelativeLayout>